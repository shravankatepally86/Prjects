                font-weight: bold;
            }
            div.equal:active{
                font-size: 1.8 rem;
                box-shadow: inset 0px 4px 40px 0px rgba(86, 216, 82, 0.5);
                font-weight: bold;
                background-color: white;

            }
            div.equal{
                width: 50px;
                border: 1px solid #ddd ;
                 margin-top: 10px;
                padding: 70px 10px;
                border-radius: 2px;
                cursor: pointer;
                text-align: center;
                background-color: rgb(159, 132, 221);
                transition: box-shadow .2s ease-in-out;
                
            }
            div.del{
                border: 1px solid #ddd;
                width: 50px;
                border-radius: 3px;
                padding:10px; 
                transition: box-shadow .2s ease-in-out;
            }


