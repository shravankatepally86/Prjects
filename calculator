            }

            .numbers div:active{
                box-shadow: inset 0px 4px 40px 0px rgba(86, 216, 82, 0.5);
                font-weight: bold;

            }
            .operators div:active{
                box-shadow: inset 0px 4px 40px 0px rgba(86, 216, 82, 0.5);
                font-weight: bold;
            }
            div.del:active{
                font-size: 1.8 rem;
